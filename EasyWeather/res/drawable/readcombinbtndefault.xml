<?xml version="1.0" encoding="UTF-8"?>
<!-- 没有焦点是显示的边框颜色 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 渐变 -->
    <gradient
        android:angle="270"
        android:endColor="#e2e2e2"
        android:startColor="#f7f7f7" />

    <stroke
        android:width="0.5dp"
        android:color="#dcdedd" />
    <!-- 圆角 -->
    <corners android:radius="5dp" />

    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />

</shape>