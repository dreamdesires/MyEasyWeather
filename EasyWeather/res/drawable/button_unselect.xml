<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed 点击 -->
    <item android:state_pressed="true"><shape>

            <!-- 渐变 -->
            <gradient android:angle="270" android:endColor="#d8d8d8" android:startColor="#ffffff" />

            <stroke android:width="0.5dp" android:color="#bababa" />

            <!-- 圆角 -->
            <corners android:radius="10dp" />

            <padding android:bottom="8dip" android:left="10dip" android:right="10dip" android:top="8dip" />
        </shape></item>

    <!-- focus 获得焦点 -->
    <item android:state_focused="true"><shape>

            <!-- 渐变 -->
            <gradient android:angle="270" android:endColor="#d8d8d8" android:startColor="#ffffff" />

            <stroke android:width="0.5dp" android:color="#bababa" />

            <!-- 圆角 -->
            <corners android:radius="10dp" />

            <padding android:bottom="8dip" android:left="10dip" android:right="10dip" android:top="8dip" />
        </shape></item>

    <!-- default -->
    <item><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#407bb5" android:startColor="#639fd6" />

            <stroke android:width="0.5dp" android:color="#2d6192" />
            <!-- 描边 -->
            <corners android:radius="10dp" />

            <padding android:bottom="8dip" android:left="10dip" android:right="10dip" android:top="8dip" />
        </shape></item>

</selector>